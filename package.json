  "scripts": {
    "test": " NODE_OPTIONS=--experimental-vm-modules jest",
    "prepublish": "npm run build",
    "publish": "lerna run tsc && lerna publish",
    "lint": "eslint .",
    "buildKeyFirst": "cd ./packages/key && npm run build",
    "build": "npm run buildKeyFirst && npm run build:all",
    "build:all": "lerna run build --stream --parallel",
    "start": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd ./examples/ExampleClient/ && npm run dev",
    "dev:server": "cd ./examples/ExampleServer/ && npm run dev"
  },
  "keywords": [

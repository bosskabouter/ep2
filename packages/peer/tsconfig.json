{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "lib": ["DOM", "DOM.Iterable"],
    "target": "ES2016",
    "module": "ES2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig"
}

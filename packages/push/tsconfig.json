{
  "extends": "../../tsconfig.json", 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./out",

    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "composite": true,
    "esModuleInterop": true,
    "target": "ES2016",
    "module": "ES2020",
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["src","../client/src/shared-types/*"],
    "outDir": "out",
    "lib": ["esnext"],
    "composite": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "module": "ES2022",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shared-types/*": ["../push/src/shared-types/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json", "../client/src/shared-types/*"],
  "$schema": "https://json.schemastore.org/tsconfig"
}

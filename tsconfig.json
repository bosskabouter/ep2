{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    // "rootDir": "/src",
    // "outDir": "./out",
    "paths": {
      "@ep2/key/*": [
        "packages/key/*"
      ],
      "@ep2/key-bip/*": [
        "packages/key-bip/*"
      ],
      "@ep2/online-client/*": [
        "packages/online-client/*"
      ],
      "@ep2/online-server/*": [
        "packages/online-server/*"
      ],
      "@ep2/offline-client/*": [
        "packages/offline-client/*"
      ],
      "@ep2/offline-server/*": [
        "packages/offline-server/*"
      ]
    },
    "lib": [
      // "DOM",
      // "DOM.Iterable",
      // "ESNext"
      "WebWorker"
    ],
    "composite": true,
    // "target": "es2017",
    // "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,
    "strict": true,
    // "skipLibCheck": true,
    // "declaration": true,
    // "allowJs": true,
    // "noImplicitOverride": false
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true
  },
  "references": [
    {
      "path": "packages/key"
    },
    {
      "path": "packages/key-bip"
    },
    {
      "path": "packages/online-client"
    },
    {
      "path": "packages/online-server"
    },
    {
      "path": "packages/offline-client"
    },
    {
      "path": "packages/offline-server"
    }
  ],
  "include": [
    "**/*.json"
  ],
  "exclude": [
    "**/dist/**",
    "**/out/**",
    "**/dev-dist/**",
    "**/coverage/**"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}